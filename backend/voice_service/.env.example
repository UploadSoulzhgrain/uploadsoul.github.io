# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,https://your-production-domain.com
DEBUG=True

# Storage Settings
STORAGE_DIR=/data/audio

# STT (Speech-to-Text) Settings
STT_PROVIDER=google  # google, azure, whisper
STT_DEFAULT_LANGUAGE=en-US

# TTS (Text-to-Speech) Settings
TTS_PROVIDER=gtts  # gtts, azure, elevenlabs
TTS_DEFAULT_LANGUAGE=en-US

# Azure Cognitive Services (optional)
# AZURE_SPEECH_KEY=your_azure_speech_key_here
# AZURE_SPEECH_REGION=eastus

# ElevenLabs (optional)
# ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# OpenAI API (for future integration)
# OPENAI_API_KEY=your_openai_api_key_here
