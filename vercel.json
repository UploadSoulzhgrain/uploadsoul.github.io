{
  "version": 2,
  "framework": "vite",
  "cleanUrls": true,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/sitemap.xsl",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/xsl"
        }
      ]
    }
  ],
  "functions": {
    "api/chat.js": {
      "maxDuration": 60
    },
    "api/heygen-token.js": {
      "maxDuration": 30
    }
  }
}