{
  "version": 2,
  "buildCommand": "cd backend && npm install && npm run build",
  "outputDirectory": "backend/dist",
  "installCommand": "cd backend && npm install",
  "builds": [
    {
      "src": "src/index.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["dist/**"],
        "buildCommand": "npm run build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/index.ts"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "MONGODB_URI": "@mongodb-uri",
    "JWT_SECRET": "@jwt-secret",
    "JWT_EXPIRES_IN": "7d",
    "FRONTEND_URL": "https://www.uploadsoul.com",
    "SMTP_HOST": "@smtp-host",
    "SMTP_PORT": "@smtp-port",
    "SMTP_USER": "@smtp-user",
    "SMTP_PASS": "@smtp-pass",
    "SMTP_FROM": "@smtp-from",
    "SMS_ACCESS_KEY_ID": "@sms-access-key-id",
    "SMS_ACCESS_KEY_SECRET": "@sms-access-key-secret",
    "SMS_SIGN_NAME": "@sms-sign-name",
    "SMS_TEMPLATE_CODE": "@sms-template-code",
    "AWS_REGION": "@aws-region",
    "AWS_ACCESS_KEY_ID": "@aws-access-key-id",
    "AWS_SECRET_ACCESS_KEY": "@aws-secret-access-key",
    "AWS_S3_BUCKET": "@aws-s3-bucket"
  }
}
