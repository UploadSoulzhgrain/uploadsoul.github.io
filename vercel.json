{
  "version": 2,
  "framework": "vite",
  "cleanUrls": true,
  "headers": [
    {
      "source": "/sitemap.xml",
      "headers": [
        {
          "key": "Content-Type",
          "value": "application/xml"
        }
      ]
    },
    {
      "source": "/sitemap.xsl",
      "headers": [
        {
          "key": "Content-Type",
          "value": "text/xsl"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/((?!sitemap\\.xml|sitemap\\.xsl|robots\\.txt|assets/|_next/|favicon\\.ico).* )",
      "destination": "/index.html"
    }
  ]
}